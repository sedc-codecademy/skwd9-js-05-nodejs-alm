<%- include('layouts/head.ejs') %>
<%- include('layouts/nav.ejs') %>
    <main>
        <h1>Users</h1>
        <p>List of users...</p>
        <% if (hasUsers) { %>
        <ul class="user-list">
            <% users.forEach(function(user) { %>
                <li class="list-item">
                    <div class="user-card">
                        <div class="user-card__name">
                            <%= user.username %>
                        </div>
                        <div class="user-card__email">
                            <%= user.email %>
                        </div>
                    </div>
                </li>
            <% }); %>
        </ul>
        <% } else { %>
            <h1>No users found!</h1>
            <% } %>
    </main>
</body>
</html>